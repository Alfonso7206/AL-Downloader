{
  "name": "aldownloader-gui",
  "version": "1.0.0",
  "description": "AL Downloader",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder"
  },
  "author": "Alfonso Leoni",
  "license": "AGPL-3.0-only",
  "devDependencies": {
    "electron": "^26.2.2",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "extract-zip": "^2.0.1",
    "tree-kill": "^1.2.2"
  },
  "build": {
    "appId": "com.al.aldownloader-gui",
    "productName": "AL Downloader",
    "asar": true,
    "asarUnpack": [
      "bin/**/*"
    ],
    "files": [
      "main.js",
      "renderer.js",
      "index.html",
      "style.css",
      "assets/**/*",
      "css/**/*",
      "bin/**/*",
      "*.bat",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
